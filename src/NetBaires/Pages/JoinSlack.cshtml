@page
@using ViewComponents
@model JoinSlackModel
@await Component.InvokeAsync("Breadcrumb", new BreadcrumbViewModel("Sumate a Slack", "Sumate a Slack"))
@{
    ViewData["Title"] = "Join Slack";
}

<div class="lgx-page-wrapper">
    <!--News-->
    <section>
        <div class="container">
            <div class="row">

                <div class="col-sm-12 col-md-6 col-md-offset-3">


                    <div style="text-align: center" class="lgx-subscriber-inner">

                        <img style="width: 300px;margin-bottom: 30px" src="https://cdn-images-1.medium.com/max/1600/1*LKzOm8aR2dMYUu8ZNvITFg.png" />

                        <form method="POST" class="lgx-subscribe-form">
                            <div class="form-group form-group-email">
                                <input asp-for="Email" type="email" id="subscribe" placeholder="Ingresa tu dirección de Email ..." class="form-control lgx-input-form form-control" />
                                @if (!Model.Ok)
                                {
                                    <p class="help-block" id="lgxname-error">@Model.Error</p>
                                }
                                else
                                {
                                    <p class="text-success" id="lgxname-sucess">La invitación fue enviada al mail: @Model.Email</p>
                                    <p class="text-success" id="lgxname-sucess">Revise su email para continuar</p>

                                }
                            </div>
                            <div class="form-group form-group-submit">
                                <button asp-page-handler="Invite" type="submit" name="lgx-submit" id="lgx-submit" class="lgx-btn lgx-submit"><span>Invitar</span></button>
                            </div>

                        </form> <!--//.SUBSCRIBE-->
                    </div>

                </div> <!--//.COL-->
            </div>
        </div><!-- //.CONTAINER -->
    </section>
    <!--News END-->
</div>
