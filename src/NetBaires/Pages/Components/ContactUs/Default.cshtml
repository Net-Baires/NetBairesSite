@model Models.ContactUsViewModel

<style>
    .red {
        color: red;
    }

    .form-area {
        background-color: #FAFAFA;
        padding: 10px 40px 60px;
        margin: 10px 0px 60px;
        border: 1px solid GREY;
    }
</style>
<div class="container">
    <div class="col-md-5">
        <div class="form-area">
            <form method="POST">
                <br style="clear:both">
                <h3 style="margin-bottom: 25px; text-align: center;">Contact Form</h3>
                <div class="form-group">
                    <label for="@Model.Email">Email</label>
                    <input type="email" required="" asp-for="@Model.Email" class="form-control" />

                </div>

                <div class="form-group">
                    <label for="@Model.Name">Nombre</label>

                    <input type="text" required="" asp-for="@Model.Name" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="@Model.Message">Message</label>
                    <textarea required="" asp-for="@Model.Message" class="form-control"></textarea>
                    <span class="help-block">
                        <p id="characterLeft" class="help-block ">You have reached the limit</p>
                    </span>
                </div>

                <button type="submit" class="btn btn-primary pull-right" asp-page-handler="ContactUs">
                    Contactanos
                </button>
            </form>
        </div>
    </div>
</div>