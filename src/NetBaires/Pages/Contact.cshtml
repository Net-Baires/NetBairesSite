@page
@using ViewComponents
@model ContactModel
@await Component.InvokeAsync("Breadcrumb", new BreadcrumbViewModel("Contactate", "ContactatUs"))


<main>
    <div class="lgx-page-wrapper">
        <!--News-->
        <section>
            <div class="container">
                <div class="row">

                    <div class="col-sm-12 col-md-6 col-md-offset-3">

                        <form method="POST">
                            <div class="form-group">

                                <input type="text" asp-for="@Model.Name" name="lgxname" class="form-control lgxname" id="lgxname" placeholder="Nombre" required>
                            </div>

                            <div class="form-group">
                                <input type="email" asp-for="@Model.Email" name="lgxemail" class="form-control lgxemail" id="lgxemail" placeholder="Email" required>
                            </div>

                            <div class="form-group">
                                <input type="text" asp-for="@Model.Subject" name="lgxsubject" class="form-control lgxsubject" id="lgxsubject" placeholder="Motivo de Contacto" required>
                            </div>

                            <div class="form-group">
                                <textarea asp-for="@Model.Message" class="form-control lgxmessage" name="lgxmessage" id="lgxmessage" rows="5" placeholder="Dejanos tu mensaje ..." required></textarea>
                            </div>
                            <button type="submit" name="submit"  asp-page-handler="Submmit" value="contact-form" class="lgx-btn hvr-glow hvr-radial-out lgxsend lgx-send"><span>Enviar Mensaje</span></button>
                        </form>

                    </div> <!--//.COL-->
                </div>
            </div><!-- //.CONTAINER -->
        </section>
        <!--News END-->
    </div>
</main>